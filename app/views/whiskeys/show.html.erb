<h2><%= @whiskeys.name %></h2>
<h4>Description</h4>
<p><%= @whiskeys.description %></p>
<h4>Style</h4>
<p><%= @whiskeys.style %></p>


<%= form_for([@whiskeys, @comment]) do |f| %>
	<p>
		<%= f.label :content %>
		<br>
		<%= f.text_area :content %>
	</p>	

	<p>
		<%= f.submit %>
	</p>
<% end %>

<h3>Comments</h3>
	<% @comments.each do |comment| %>
		<p><%= comment.content %></p>
		<hr>
	<% end %>



