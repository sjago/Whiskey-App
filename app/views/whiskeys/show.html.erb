<h2><%= @whiskeys.name %></h2>
<img src = "<%= @whiskeys.image %>"/>
<h4>Description</h4>
<p><%= @whiskeys.description %></p>
<p><b>Style: </b><%= @whiskeys.style %></p>


<%= form_for([@whiskeys, @comment]) do |f| %>
	<p>
		<%= f.label :Leave_A_Comment %>
		<br>
		<%= f.text_area :content %>

	</p>	

	<p>
		<%= f.submit %>
	</p>
<% end %>

<h3>Comments</h3>
	
	<% @comments.each do |comment| %>
		<p><%= comment.content %></p>
		<hr>
	<% end %>





