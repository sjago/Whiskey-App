<h3><%= @whiskeys.name %></h3>
<p><%= @whiskeys.description %></p>


<%= form_for([@whiskeys, @comment]) do |f| %>
	<p>
		<%= f.label :content %>
		<br>
		<%= f.text_area :content %>
	</p>	

	<p>
		<%= f.submit %>
	</p>
<% end %>

<h3>Comments</h3>
	<% @comments.each do |comment| %>
		<p><%= comment.content %></p>
		<hr>
	<% end %>



